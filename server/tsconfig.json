{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "",
      "paths": {
        "@/lib/*": ["src/lib/*"],
        "@/utils/*": ["src/utils/*"],
        "@/middleware/*": ["src/middleware/*"],
        "@/models/*" : ["src/models/*"],
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 